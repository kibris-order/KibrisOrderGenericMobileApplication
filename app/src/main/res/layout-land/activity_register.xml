<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8d6d6"
    tools:context=".Register"
    tools:layout_editor_absoluteY="73dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar2"
        android:layout_width="700dp"
        android:layout_height="53dp"
        android:background="@android:color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:text="REGISTER"
        android:textColor="#FFF81F2E"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/toolBar2"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="689dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar2">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="41dp">

            <EditText
                android:id="@+id/repass"
                android:layout_width="630dp"
                android:layout_height="41dp"
                android:layout_marginEnd="17dp"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="17dp"
                android:layout_marginStart="42dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint=" Rewrite password"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pass" />

            <EditText
                android:id="@+id/pass"
                android:layout_width="630dp"
                android:layout_height="41dp"
                android:layout_marginEnd="17dp"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="17dp"
                android:layout_marginStart="42dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint=" Password"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lastname" />

            <EditText
                android:id="@+id/email"
                android:layout_width="630dp"
                android:layout_height="46dp"
                android:layout_marginEnd="17dp"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="17dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="50dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint=" Email"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/firstname"
                android:layout_width="630dp"
                android:layout_height="41dp"
                android:layout_marginEnd="17dp"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="17dp"
                android:layout_marginStart="42dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint=" First name"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="630dp"
                android:layout_height="41dp"
                android:layout_marginEnd="17dp"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="17dp"
                android:layout_marginStart="42dp"
                android:background="@android:color/background_light"
                android:ems="10"
                android:hint=" Last name"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstname" />

            <Button
                android:id="@+id/register"
                android:layout_width="310dp"
                android:layout_height="48dp"
                android:layout_marginEnd="182dp"
                android:layout_marginLeft="197dp"
                android:layout_marginRight="182dp"
                android:layout_marginStart="197dp"
                android:layout_marginTop="56dp"
                android:background="#FFF81F2E"
                android:text="Agree $ Create Account"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/repass" />

            <Button
                android:id="@+id/signin"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="248dp"
                android:layout_marginLeft="247dp"
                android:layout_marginRight="248dp"
                android:layout_marginStart="247dp"
                android:layout_marginTop="12dp"
                android:background="@android:color/transparent"
                android:text="Already have an account"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/register" />

            <Space
                android:layout_width="115dp"
                android:layout_height="41dp"
                android:layout_marginEnd="287dp"
                android:layout_marginLeft="287dp"
                android:layout_marginRight="287dp"
                android:layout_marginStart="287dp"
                android:layout_marginTop="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/signin" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>